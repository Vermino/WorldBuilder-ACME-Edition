<UserControl
    x:Class="WorldBuilder.Editors.Landscape.Views.ObjectBrowserView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    xmlns:views="using:WorldBuilder.Views"
    d:DesignHeight="500"
    d:DesignWidth="280"
    x:CompileBindings="True"
    x:DataType="vm:ObjectBrowserViewModel"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Spacing="4" Margin="4,2">
            <TextBox
                Watermark="Search by name or hex ID"
                Text="{Binding SearchText}"
                FontSize="11"
                Padding="4,3" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <CheckBox Content="Setups" IsChecked="{Binding ShowSetups}" FontSize="11" Padding="2,0" />
                <CheckBox Content="GfxObj" IsChecked="{Binding ShowGfxObjs}" FontSize="11" Padding="2,0" />
                <CheckBox Content="Buildings" IsChecked="{Binding ShowBuildingsOnly}" FontSize="11" Padding="2,0" />
                <CheckBox Content="Scenery" IsChecked="{Binding ShowSceneryOnly}" FontSize="11" Padding="2,0" />
            </StackPanel>

            <TextBlock
                FontSize="10"
                Foreground="{DynamicResource SystemBaseMediumColor}"
                Opacity="0.7"
                Text="{Binding Status}"
                TextWrapping="Wrap" />
        </StackPanel>

        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding FilteredItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:ObjectBrowserItem">
                        <Button
                            Margin="3"
                            Padding="2"
                            Command="{Binding $parent[UserControl].((vm:ObjectBrowserViewModel)DataContext).SelectForPlacementCommand}"
                            CommandParameter="{Binding}"
                            ToolTip.Tip="{Binding Tags}"
                            Focusable="False"
                            HorizontalContentAlignment="Center">
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <!-- Thumbnail image with placeholder fallback -->
                                <Panel Width="80" Height="80">
                                    <Border
                                        Background="#FF2A2A2A"
                                        CornerRadius="2"
                                        IsVisible="{Binding Thumbnail, Converter={x:Static ObjectConverters.IsNull}}" />
                                    <!-- Animated sprite sheet viewer -->
                                    <views:AnimatedSpriteImage
                                        Width="80"
                                        Height="80"
                                        FrameWidth="96"
                                        FrameCount="8"
                                        FramesPerSecond="12"
                                        AnimateOnHover="True"
                                        Source="{Binding Thumbnail}"
                                        IsVisible="{Binding Thumbnail, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                </Panel>
                                <!-- Object ID label -->
                                <TextBlock
                                    Text="{Binding DisplayId}"
                                    FontSize="9"
                                    FontFamily="Consolas"
                                    HorizontalAlignment="Center"
                                    TextTrimming="CharacterEllipsis"
                                    MaxWidth="84" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
