<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
             xmlns:vp="using:WorldBuilder.Views.Components.Viewports"
             xmlns:docking="clr-namespace:WorldBuilder.Lib.Docking;assembly=WorldBuilder"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="WorldBuilder.Editors.Landscape.Views.LandscapeEditorView"
             x:DataType="vm:LandscapeEditorViewModel">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200" MaxWidth="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="250" MinWidth="200" MaxWidth="500" />
        </Grid.ColumnDefinitions>

        <!-- Left Panels -->
        <Border Grid.Column="0"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,1,0">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding DockingManager.LeftPanels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="docking:DockablePanelViewModel">
                            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                    BorderThickness="0,0,0,1"
                                    Margin="0,0,0,0">
                                <DockPanel LastChildFill="True">
                                    <Border DockPanel.Dock="Top" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" Padding="6,4">
                                        <DockPanel>
                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Spacing="4">
                                                <Button Content="^" ToolTip.Tip="Float" Command="{Binding FloatCommand}" Padding="4,2" FontSize="10" />
                                                <Button Content="&gt;" ToolTip.Tip="Dock Right" Command="{Binding DockToCommand}" CommandParameter="Right" Padding="4,2" FontSize="10" />
                                                <Button Content="X" ToolTip.Tip="Close" Command="{Binding CloseCommand}" Padding="4,2" FontSize="10" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" VerticalAlignment="Center" />
                                        </DockPanel>
                                    </Border>
                                    <ContentControl Content="{Binding Content}" Margin="0" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!--  Splitter between left panel and viewport  -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent" />

        <!--  Main Viewport Area  -->
        <Grid Grid.Column="2" Background="Black">
            <vp:ViewportContainer />

            <!--  Overlay toggle toolbar  -->
            <Border
                Margin="0,8,0,0"
                Padding="4,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#CC1E1E1E"
                CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <ToggleButton
                        IsChecked="{Binding ShowGrid}"
                        ToolTip.Tip="Toggle Grid"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x2637;" FontSize="13" />
                            <TextBlock Text="Grid" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowStaticObjects}"
                        ToolTip.Tip="Toggle Static Objects"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F3E0;" FontSize="13" />
                            <TextBlock Text="Objects" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowScenery}"
                        ToolTip.Tip="Toggle Scenery"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F332;" FontSize="13" />
                            <TextBlock Text="Scenery" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowDungeons}"
                        ToolTip.Tip="Toggle Dungeon Geometry"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F573;" FontSize="13" />
                            <TextBlock Text="Dungeons" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowSlopeHighlight}"
                        ToolTip.Tip="Highlight Unwalkable Slopes"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x26A0;" FontSize="13" />
                            <TextBlock Text="Slopes" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <Border Width="1" Background="#44FFFFFF" Margin="4,2" />
                    <Button
                        ToolTip.Tip="Toggle Panels"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F5D4;" FontSize="13" />
                            <TextBlock Text="Panels" VerticalAlignment="Center" />
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout Placement="Bottom">
                                <ItemsControl ItemsSource="{Binding DockingManager.AllPanels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Title}" IsChecked="{Binding IsVisible}" Margin="5,2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    <Border Width="1" Background="#44FFFFFF" Margin="4,2" />
                    <Button
                        Command="{Binding ResetCameraCommand}"
                        ToolTip.Tip="Reset Camera to Map Center"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F3AF;" FontSize="13" />
                            <TextBlock Text="Reset" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!--  Position HUD  -->
            <Border
                Margin="8"
                Padding="6,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#88000000"
                CornerRadius="4"
                IsHitTestVisible="False">
                <TextBlock
                    FontFamily="Consolas, Courier New"
                    FontSize="12"
                    Foreground="White"
                    Text="{Binding CurrentPositionText}" />
            </Border>
        </Grid>

        <!--  Splitter for tools panel  -->
        <GridSplitter Grid.Column="3"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent" />

        <!-- Right Panels -->
        <Border Grid.Column="4"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1,0,0,0">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding DockingManager.RightPanels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="docking:DockablePanelViewModel">
                            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                    BorderThickness="0,0,0,1"
                                    Margin="0,0,0,0">
                                <DockPanel LastChildFill="True">
                                    <Border DockPanel.Dock="Top" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" Padding="6,4">
                                        <DockPanel>
                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Spacing="4">
                                                <Button Content="^" ToolTip.Tip="Float" Command="{Binding FloatCommand}" Padding="4,2" FontSize="10" />
                                                <Button Content="&lt;" ToolTip.Tip="Dock Left" Command="{Binding DockToCommand}" CommandParameter="Left" Padding="4,2" FontSize="10" />
                                                <Button Content="X" ToolTip.Tip="Close" Command="{Binding CloseCommand}" Padding="4,2" FontSize="10" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" VerticalAlignment="Center" />
                                        </DockPanel>
                                    </Border>
                                    <ContentControl Content="{Binding Content}" Margin="0" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
